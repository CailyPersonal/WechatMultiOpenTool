<Window x:Class="MultiWeChatOpenTool.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiWeChatOpenTool"
        xmlns:Ctrl="clr-namespace:ESMP.Controls;assembly=Controls"
        mc:Ignorable="d" WindowStyle="None" Background="WhiteSmoke" BorderBrush="LightGray" BorderThickness="1" ResizeMode="NoResize"
        Title="Settings" Height="200" Width="400">
    <Canvas>
        <TextBlock Text="设置" Canvas.Left="10" Canvas.Top="10"/>

        <TextBlock Text="安装路径:" Canvas.Top="40" Canvas.Left="10"/>
        <TextBox x:Name="WeChatInstallPath" IsReadOnly="True" Canvas.Left="10" Canvas.Top="65" Width="295"/>

        <Ctrl:NormalButton Content="浏览..." Canvas.Right="10" Canvas.Top="63" Canvas.Left="311"/>
    </Canvas>
</Window>
